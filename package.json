{
  "name": "@xan105/3dviewer",
  "version": "0.1.0",
  "description": "Web-component to render 3D model in the browser.",
  "type": "module",
  "exports": "./lib/index.js",
  "browser": "./dist/3DViewer.min.js",
  "files": [
    "/dist",
    "/lib"
  ],
  "engines": {
    "node": ">=22.18.0"
  },
  "scripts": {
    "lint": "eslint \"./lib/**/*.js\"",
    "bundle": "npm run-script bundle:pretty && npm run-script bundle:min",
    "bundle:pretty": "esbuild \"./lib/index.js\" --bundle --legal-comments=none --platform=browser --target=esnext --format=esm --outfile=\"./dist/3DViewer.js\"",
    "bundle:min": "esbuild \"./lib/index.js\" --bundle --minify --legal-comments=none --platform=browser --target=esnext --format=esm --outfile=\"./dist/3DViewer.min.js\"",
    "test": "start http://localhost/test && websrv"
  },
  "config": {
    "host": "localhost",
    "port": 80,
    "proxy": false,
    "cors": true,
    "csp": false,
    "root": "./",
    "index": "index.html",
    "spa": false,
    "etag": false,
    "maxAge": "1m"
  },
  "keywords": [
    "3D",
    "model",
    "cad",
    "stl",
    "webgl",
    "viewer"
  ],
  "author": {
    "name": "Anthony Beaumont",
    "email": "dev.xan105@outlook.be",
    "url": "https://xan105.com/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xan105/web-component-3DViewer.git"
  },
  "bugs": {
    "url": "https://github.com/xan105/web-component-3DViewer/issues"
  },
  "homepage": "https://github.com/xan105/web-component-3DViewer#readme",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/xan105"
    },
    {
      "type": "paypal",
      "url": "https://www.paypal.me/xan105"
    }
  ],
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@xan105/qwebsrv": "^1.1.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "globals": "^16.3.0"
  },
  "dependencies": {
    "three": "^0.180.0"
  }
}
